# Path to the local folder that will be watched and synced
FILESYNC_LOCAL_PATH=../be-scraper-fastapi/downloads

# Cloudflare R2 bucket information
FILESYNC_R2_BUCKET=your-bucket-name
FILESYNC_R2_PREFIX=downloads

# Cloudflare account and R2 credentials (do not commit real values)
CLOUDFLARE_ACCOUNT_ID=your_account_id
FILESYNC_R2_ACCESS_KEY_ID=your_access_key_id
FILESYNC_R2_SECRET_ACCESS_KEY=your_secret_access_key

# Optional: override the R2 endpoint (defaults to https://<account_id>.r2.cloudflarestorage.com)
FILESYNC_R2_ENDPOINT=
